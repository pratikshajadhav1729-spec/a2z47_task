<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All User Data</title>
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    /* ===== Body & Layout ===== */
    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-size: 1.1rem;
      background: linear-gradient(135deg, #89f7fe, #66a6ff);
    }

    .container {
      max-width: 1300px;
    }

    /* ===== Header ===== */
    h1.h3 {
      font-size: 2.2rem;
    }

    /* ===== Summary Cards ===== */
    .summary-card {
      padding: 20px;
      font-size: 1rem;
      border-radius: 0.8rem;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .summary-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .summary-card h6 {
      font-size: 1.1rem;
      font-weight: 600;
      color: #555;
    }

    .summary-card p {
      font-size: 1.5rem;
      font-weight: bold;
      margin: 0;
    }

    /* ===== Table ===== */
    .card {
      border-radius: 0.8rem;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
      border: none;
    }

    .table thead th {
      background: #0d6efd;
      color: #fff;
      text-align: center;
      font-weight: 600;
      cursor: pointer;
      font-size: 1.1rem;
      padding: 0.9rem 1rem;
    }

    .table tbody td {
      vertical-align: middle;
      font-size: 1rem;
      padding: 0.8rem 1rem;
    }

    .table-hover tbody tr:hover {
      background-color: #f3f9ff;
      transition: background 0.3s ease-in-out;
    }

    /* ===== Badges ===== */
    .badge {
      font-size: 1rem;
      padding: 0.6em 1em;
      border-radius: 0.6rem;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .badge:hover {
      transform: scale(1.1);
      box-shadow: 0 3px 12px rgba(0,0,0,0.2);
    }

    /* ===== Search Box ===== */
    .search-box {
      display: flex;
      align-items: center;
      gap: 10px;
      background: #fff;
      border-radius: 50px;
      padding: 8px 14px;
      border: 1px solid #ddd;
      max-width: 400px;
      transition: all 0.3s ease;
    }

    .search-box:hover {
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.12);
      border-color: #0d6efd;
    }

    .search-box i {
      font-size: 1.2rem;
      color: #0d6efd;
    }

    .search-box input {
      border: none;
      outline: none;
      flex: 1;
      font-size: 1rem;
      padding: 8px 12px;
      border-radius: 50px;
    }

    /* Gradient Search Button */
    .btn-search {
      border: none;
      padding: 8px 16px;
      font-size: 1rem;
      font-weight: 600;
      border-radius: 50px;
      color: #fff;
      background: linear-gradient(135deg, #0d6efd, #4dabf7);
      transition: 0.3s ease;
    }

    .btn-search:hover {
      background: linear-gradient(135deg, #0b5ed7, #339af0);
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgba(13,110,253,0.3);
    }

    /* ===== Table Row Height ===== */
    .table tbody tr {
      height: 60px;
    }

    /* ===== Modal ===== */
    .modal-content {
      border-radius: 20px;
      overflow: hidden;
      font-size: 1rem;
    }

    .modal-header {
      border: 0;
      background: #e0f0ff;
    }
  </style>
</head>
<body>

<div class="container my-5">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h1 class="h3 fw-bold text-primary m-0"><i class="bi bi-people-fill me-2"></i> All Users Data</h1>
    <!-- Attractive Search Box -->
    <div class="search-box shadow-sm">
      <i class="bi bi-search"></i>
      <input type="text" id="searchInput" placeholder="Search users...">
      <button class="btn-search"><i class="bi bi-funnel"></i> Search</button>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="row mb-3 text-center g-3">
    <div class="col-6 col-md-3"><div class="card summary-card"><h6>Total Users</h6><p id="totalUsers">0</p></div></div>
    <div class="col-6 col-md-3"><div class="card summary-card bg-warning-subtle"><h6>Pending</h6><p id="totalPending">0</p></div></div>
    <div class="col-6 col-md-3"><div class="card summary-card bg-info-subtle"><h6>Processing</h6><p id="totalProcessing">0</p></div></div>
    <div class="col-6 col-md-3"><div class="card summary-card bg-success-subtle"><h6>Completed</h6><p id="totalCompleted">0</p></div></div>
  </div>

  <!-- User Table -->
  <div class="card p-4">
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle text-center shadow-sm" id="userTableMain">
        <thead>
          <tr>
            <th data-sort="id">User ID</th>
            <th data-sort="name">User Name</th>
            <th data-sort="mobile">Mobile</th>
            <th data-sort="pending">Pending</th>
            <th data-sort="processing">Processing</th>
            <th data-sort="completed">Completed</th>
          </tr>
        </thead>
        <tbody id="userTable">
          <% for(var i=0;i<users.length;i++) { %>
            <tr>
              <td><span class="badge bg-dark"><%- i+1 %></span></td>
              <td class="fw-semibold"><%- users[i].user_name %></td>
              <td><i class="bi bi-telephone me-1 text-primary"></i> <%- users[i].user_mobile %></td>
              <td><a href="javascript:void(0)" onclick="open_page_modal('/pending_tasks/<%- users[i].user_id %>', 'Pending Tasks')"><span class="badge bg-warning text-dark"><%- users[i].pending_count %></span></a></td>
              <td><a href="javascript:void(0)" onclick="open_page_modal('/processing_tasks/<%- users[i].user_id %>', 'Processing Tasks')"><span class="badge bg-info text-dark"><%- users[i].processing_count %></span></a></td>
              <td><a href="javascript:void(0)" onclick="open_page_modal('/completed_tasks/<%- users[i].user_id %>', 'Completed Tasks')"><span class="badge bg-success"><%- users[i].completed_count %></span></a></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="pageModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fw-bold text-dark" id="modalTitle">Tasks</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body p-0 position-relative" style="height: 80vh;">
        <div id="iframeLoader" class="position-absolute top-50 start-50 translate-middle"><div class="spinner-border text-primary"></div></div>
        <iframe id="pageFrame" src="" style="width:100%; height:100%; border:0;"></iframe>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Open Modal
  function open_page_modal(url, title) {
    document.getElementById("iframeLoader").style.display = "block";
    let iframe = document.getElementById("pageFrame");
    iframe.src = url;
    iframe.onload = () => document.getElementById("iframeLoader").style.display = "none";
    document.getElementById("modalTitle").innerText = title;
    new bootstrap.Modal(document.getElementById("pageModal")).show();
  }

  // Search Filter
  document.getElementById("searchInput").addEventListener("keyup", function() {
    filterTable(this.value.toLowerCase());
  });

  // Sorting
  document.querySelectorAll("th[data-sort]").forEach(th => {
    th.addEventListener("click", () => sortTable(th.cellIndex));
  });

  function sortTable(colIndex) {
    let tbody = document.getElementById("userTable");
    let rows = Array.from(tbody.rows);
    let asc = tbody.getAttribute("data-sort-dir") !== "asc";
    rows.sort((a,b)=> a.cells[colIndex].innerText.localeCompare(b.cells[colIndex].innerText,undefined,{numeric:true}));
    if (!asc) rows.reverse();
    tbody.innerHTML = "";
    rows.forEach(r=>tbody.appendChild(r));
    tbody.setAttribute("data-sort-dir", asc?"asc":"desc");
  }

  function filterTable(query) {
    let rows = document.querySelectorAll("#userTable tr");
    rows.forEach(row => row.style.display = row.textContent.toLowerCase().includes(query) ? "" : "none");
  }

  function updateSummary() {
    let rows = document.querySelectorAll("#userTable tr");
    document.getElementById("totalUsers").innerText = rows.length;
    let p=0,pr=0,c=0;
    rows.forEach(r=>{
      p+=parseInt(r.cells[3].innerText)||0;
      pr+=parseInt(r.cells[4].innerText)||0;
      c+=parseInt(r.cells[5].innerText)||0;
    });
    document.getElementById("totalPending").innerText=p;
    document.getElementById("totalProcessing").innerText=pr;
    document.getElementById("totalCompleted").innerText=c;
  }

  document.addEventListener("DOMContentLoaded", ()=> updateSummary());
</script>
</body>
</html>
